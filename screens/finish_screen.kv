#:import MDActionBottomAppBarButton kivymd.uix.appbar.MDActionBottomAppBarButton
<FinishScreen>:
    name: 'Finish Screen'
    app: app

    MDBoxLayout:
        orientation: 'vertical'
        spacing : dp(20)
        halign:"center"
        theme_bg_color: "Custom"
        md_bg_color: app.custom_colors['background']

        MDBoxLayout:
            theme_bg_color: "Custom"
            md_bg_color: app.custom_colors['primary']
            orientation: 'horizontal'
            padding: dp(15)
            spacing: dp(15)
            size_hint: 1, None
            size: self.minimum_size
            pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                text: "أذكاري"
                theme_text_color: "Custom"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name:"BBCairo"
                font_script_name: "Arab"
                font_direction: "rtl"
                text_color : "#11ac68"
                font_size : dp(22)
                halign: "left"

            MDIconButton:
                icon: "theme-light-dark"
                on_release: app.toggle_theme() 
                theme_icon_color: "Custom"
                theme_bg_color: "Custom"
                theme_font_size: "Custom"
                font_size: dp(26)
                size_hint: None ,None
                size: dp(26), dp(26)                 
                md_bg_color: app.custom_colors['primary']
                icon_color: app.custom_colors['accent'] 
                pos_hint: {"center_x": .5, "center_y": .5}

            MDIconButton:
                icon: "information"
                on_release: app.info_dialog()  
                theme_icon_color: "Custom"
                theme_bg_color: "Custom"
                theme_font_size: "Custom"
                font_size: dp(26)
                size_hint: None ,None
                size: dp(26), dp(26)                 
                md_bg_color: app.custom_colors['primary']
                icon_color: app.custom_colors['accent'] 
                pos_hint: {"center_x": .5, "center_y": .5}
        MDBoxLayout:
            orientation: 'vertical'
            padding : dp(15)
            spacing : dp(20)
            halign:"center"
            id : box
            Image:
                id : gif
                source:'Assets/finsh_animation.gif'
                anim_delay:-1
                anim_loop : 1
