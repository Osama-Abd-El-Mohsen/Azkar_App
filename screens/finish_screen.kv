#:import MDActionBottomAppBarButton kivymd.uix.appbar.MDActionBottomAppBarButton
<FinishScreen>:
    name: 'Finish Screen'
    app: app
    MDBoxLayout:
        orientation: 'vertical'
        halign:"center"
        theme_bg_color: "Custom"
        md_bg_color: app.custom_colors['background']
        spacing : dp(20)
        MDTopAppBar:
            theme_bg_color: "Custom"
            md_bg_color: app.custom_colors['primary']
            type: "small"
            pos_hint: {"top": 1}
            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    on_release: app.go_main()  
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    theme_font_size: "Custom"
                    font_size: dp(26)
                    size_hint: None ,None
                    size: dp(26), dp(26)                 
                    md_bg_color: app.custom_colors['primary']
                    icon_color: app.custom_colors['accent'] 

            MDTopAppBarTitle:
                text: "أذكاري"
                theme_text_color: "Custom"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name:"BBCairo"
                font_script_name: "Arab"
                font_direction: "rtl"
                text_color : "#11ac68"
                font_size : dp(22)
                pos_hint: {"center_x": .5}

            MDTopAppBarTrailingButtonContainer:
                spacing : dp(15)

                MDActionTopAppBarButton:
                    icon: "theme-light-dark"
                    on_release: app.toggle_theme()  
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    theme_font_size: "Custom"
                    font_size: dp(26)
                    size_hint: None ,None
                    size: dp(26), dp(26)                 
                    md_bg_color: app.custom_colors['primary']
                    icon_color: app.custom_colors['accent'] 

                MDActionTopAppBarButton:
                    icon: "information"
                    on_release: app.info_dialog()  
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    theme_font_size: "Custom"
                    font_size: dp(26)
                    size_hint: None ,None
                    size: dp(26), dp(26)                 
                    md_bg_color: app.custom_colors['primary']
                    icon_color: app.custom_colors['accent'] 
        MDBoxLayout:
            orientation: 'vertical'
            padding : dp(15)
            spacing : dp(20)
            halign:"center"
            id : box
