#:import MDActionBottomAppBarButton kivymd.uix.appbar.MDActionBottomAppBarButton
<AzkarScreen_1>:
    name: 'Azkar Screen_1'
    app: app
    MDBoxLayout:
        orientation: 'vertical'
        spacing : dp(15)
        halign:"center"
        MDTopAppBar:
            theme_bg_color: "Custom"
            md_bg_color: '#161a1d'
            type: "small"
            pos_hint: {"top": 1}
            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    on_release: app.go_main()  
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    theme_font_size: "Custom"
                    font_size: dp(20)
                    size_hint: None ,None
                    size: dp(20), dp(20)                 
                    md_bg_color: "#101318"
                    icon_color: "#f4f9fc"  

            MDTopAppBarTitle:
                text: "أذكاري"
                theme_text_color: "Custom"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name:"BBCairo"
                font_script_name: "Arab"
                font_direction: "rtl"
                text_color : "#f4f9fc"
                font_size : dp(22)
                pos_hint: {"center_x": .5}

            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "information"
                    on_release: app.info_dialog()  
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    theme_font_size: "Custom"
                    font_size: dp(20)
                    size_hint: None ,None
                    size: dp(20), dp(20)                 
                    md_bg_color: "#101318"
                    icon_color: "#f4f9fc"  

        MDBoxLayout:
            orientation: 'vertical'
            padding : dp(15)
            spacing : dp(20)
            halign:"center"

            MDLabel:
                id: label
                text: "0/0"
                pos_hint: {"center_x": .5}
                adaptive_size:True
                theme_text_color: "Custom"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name:"BBCairo"
                text_color : "#f4f9fc"
                font_size : dp(22)

            MDScrollView:
                do_scroll_x: False
                do_scroll_y: True

                MDList:
                    id:list
        MDBoxLayout:
            orientation: 'horizontal'
            padding: dp(20)
            size_hint_y: None 
            height: "80dp"  


            MDExtendedFabButton:
                fab_state: "expand"
                pos_hint: {"center_x": .5}
                theme_bg_color: "Custom"
                md_bg_color: rgba(17, 172, 104)
                on_press: app.counter_func()
                width: dp(100)
                id : fab

                MDExtendedFabButtonIcon:
                    icon: "counter"
                    theme_icon_color: "Custom"
                    icon_color: "#101318"  

                MDExtendedFabButtonText:
                    id: counter
                    text: "0/0"
                    theme_text_color: "Custom"
                    text_color: "#161a1d" 
                    theme_font_size: "Custom"
                    font_name:"BBPoppins"
                    font_size : dp(20)


            Widget: 
                size_hint_x: 1 

            MDFabBottomAppBarButton:
                theme_icon_color: "Custom"
                theme_bg_color: "Custom"
                md_bg_color: "#161a1d"
                icon_color: "#f4f9fc"  
                icon: "arrow-left"
                on_press: app.display_next()
                max_text_length: 10
                size_hint: None, None
                size: "56dp", "56dp"
                
            Widget: 
                size_hint_x: .1

            MDFabBottomAppBarButton:
                theme_icon_color: "Custom"
                theme_bg_color: "Custom"
                md_bg_color: "#161a1d"
                icon_color: "#f4f9fc"  
                icon: "arrow-right"
                on_press: app.display_prev()
                max_text_length: 10
                size_hint: None, None
                size: "56dp", "56dp"
