#:import MDActionBottomAppBarButton kivymd.uix.appbar.MDActionBottomAppBarButton
<AzkarScreen_1>:
    name: 'Azkar Screen_1'
    app: app
    MDBoxLayout:
        orientation: 'vertical'
        halign:"center"
        theme_bg_color: "Custom"
        md_bg_color: app.custom_colors['background']
        spacing : dp(20)
        MDTopAppBar:
            theme_bg_color: "Custom"
            md_bg_color: app.custom_colors['primary']
            type: "small"
            pos_hint: {"top": 1}
            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "arrow-left"
                    on_release: app.go_main()  
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    theme_font_size: "Custom"
                    font_size: dp(26)
                    size_hint: None ,None
                    size: dp(26), dp(26)                 
                    md_bg_color: app.custom_colors['primary']
                    icon_color: app.custom_colors['accent'] 

            MDTopAppBarTitle:
                text: "أذكاري"
                theme_text_color: "Custom"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name:"BBCairo"
                font_script_name: "Arab"
                font_direction: "rtl"
                text_color : "#11ac68"
                font_size : dp(22)
                pos_hint: {"center_x": .5}

            MDTopAppBarTrailingButtonContainer:
                spacing : dp(15)

                MDActionTopAppBarButton:
                    icon: "theme-light-dark"
                    on_release: app.toggle_theme()  
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    theme_font_size: "Custom"
                    font_size: dp(26)
                    size_hint: None ,None
                    size: dp(26), dp(26)                 
                    md_bg_color: app.custom_colors['primary']
                    icon_color: app.custom_colors['accent'] 

                MDActionTopAppBarButton:
                    icon: "information"
                    on_release: app.info_dialog()  
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    theme_font_size: "Custom"
                    font_size: dp(26)
                    size_hint: None ,None
                    size: dp(26), dp(26)                 
                    md_bg_color: app.custom_colors['primary']
                    icon_color: app.custom_colors['accent'] 
        MDBoxLayout:
            orientation: 'vertical'
            padding : dp(15)
            spacing : dp(20)
            halign:"center"
            id : box

            MDLabel:
                id: label
                text: "0/0"
                pos_hint: {"center_x": .5}
                adaptive_size:True
                theme_text_color: "Custom"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name:"BBCairo"
                text_color : app.custom_colors['accent'] 
                font_size : dp(22)

            MDScrollView:
                do_scroll_x: False
                do_scroll_y: True

                MDList:
                    id:list
        MDBoxLayout:
            orientation: 'horizontal'
            padding: dp(20)
            size_hint_y: None 
            height: "80dp"  

            MDFabBottomAppBarButton:
                theme_icon_color: "Custom"
                theme_bg_color: "Custom"
                md_bg_color: app.custom_colors['primary']
                icon_color: app.custom_colors['accent']  
                icon: "arrow-left"
                on_press: app.display_next()
                max_text_length: 10
                size_hint: None, None
                size: "56dp", "56dp"
                
            Widget: 
                size_hint_x: .1

            MDFabBottomAppBarButton:
                theme_icon_color: "Custom"
                theme_bg_color: "Custom"
                md_bg_color: app.custom_colors['primary']
                icon_color: app.custom_colors['accent']  
                icon: "arrow-right"
                on_press: app.display_prev()
                max_text_length: 10
                size_hint: None, None
                size: "56dp", "56dp"

            Widget: 
                size_hint_x: 1 
                
            MDExtendedFabButton:
                fab_state: "expand"
                pos_hint: {"center_x": .5}
                theme_bg_color: "Custom"
                md_bg_color: rgba(17, 172, 104)
                on_press: app.counter_func()
                width: dp(100)
                id : fab
                theme_shadow_softness:"Custom"
                shadow_softness:100
                theme_elevation_level:"Custom"
                elevation_level:2


                MDExtendedFabButtonIcon:
                    icon: "counter"
                    theme_icon_color: "Custom"
                    icon_color: app.custom_colors['primary'] 

                MDExtendedFabButtonText:
                    id: counter
                    text: "0/0"
                    theme_text_color: "Custom"
                    theme_font_name: "Custom"
                    text_color: app.custom_colors['primary'] 
                    theme_font_size: "Custom"
                    font_name:"BBCairo"
                    font_size : dp(20)
                    pos_hint : {"center_x":0.6,"center_y":0.5}
            