<LoadingScreen>:
    name: 'Loading Screen'
    app: app
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: "#161a1d"
        spacing:'1dp'
        size_hint: (1, 1)
        MDBoxLayout:
            orientation: 'vertical'
            padding: '7dp'
            spacing: '20dp'
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: (.2, .2)
            md_bg_color: "#161a1d"

            MDBoxLayout:
                orientation: 'vertical'
                padding: '7dp'
                spacing: '20dp'
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint: (.2, .2)
                md_bg_color: "#161a1d"

                MDButtonIcon:
                    pos_hint: {"center_x": .5, "center_y": .5}
                    icon: "mosque"
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    theme_font_size: "Custom"
                    md_bg_color: "#101318"
                    icon_color: "#11ac68" 
                    font_size: dp(60)
                    size_hint: None ,None
                    size: "60dp", "60dp"


            MDCircularProgressIndicator:
                size_hint: (.8, .8)
                size: ("48dp", "48dp")
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: "#11ac68"
                line_width : 4