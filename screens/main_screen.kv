#:import Label kivy.uix.label.Label
#:import Button kivy.uix.button.Button
#:import ButtonMd kivymd.uix.button.MDButton
#:import ButtonText kivymd.uix.button.MDButtonText
#:import ButtonIcon kivymd.uix.button.MDIconButton

<MainScreen>:
    name: 'Main Screen'
    app: app
    
    MDBoxLayout:
        orientation: 'vertical'
        spacing : dp(15)
        halign:"center"
        MDTopAppBar:
            theme_bg_color: "Custom"
            md_bg_color: '#161a1d'
            type: "small"
            pos_hint: {"top": 1}
            MDTopAppBarLeadingButtonContainer:

            MDTopAppBarTitle:
                text: "أذكاري"
                theme_text_color: "Custom"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name:"BBCairo"
                font_script_name: "Arab"
                font_direction: "rtl"
                text_color : "#f4f9fc"
                font_size : dp(22)
                pos_hint: {"center_x": .5}

            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "information"
                    on_release: app.info_dialog()  
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    theme_font_size: "Custom"
                    font_size: dp(20)
                    size_hint: None ,None
                    size: dp(20), dp(20)                 
                    md_bg_color: "#101318"
                    icon_color: "#f4f9fc"  

        MDScrollView:
            do_scroll_x: False
            do_scroll_y: True

            MDBoxLayout:
                orientation: 'vertical'
                padding : dp(20)
                spacing : dp(20)
                adaptive_size:True
                halign:"center"
                id:list
                size_hint:(1, None)
                pos_hint: {"center_x": .5,"center_y": .5}

                MDButton:
                    styke:"filled"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    theme_icon_color: "Custom"
                    theme_bg_color: "Custom"
                    theme_font_size: "Custom"
                    theme_width: "Custom"
                    md_bg_color: "#161a1d"
                    icon_color: "#f4f9fc" 
                    on_press:app.get_azkar("أذكار الصباح")
                    size_hint: 1,1
                    height:dp(70)
                    radius:(15,15,15,15)
                    state_hover:0
                    state_press:0
                    ripple_scale:0

                    MDButtonIcon:
                        icon: "mosque"
                        theme_icon_color: "Custom"
                        theme_bg_color: "Custom"
                        theme_font_size: "Custom"
                        md_bg_color: "#161a1d"
                        icon_color: "#11ac68" 
                        font_size: dp(16)
                        size: "16dp", "16dp"
                        
                    MDButtonText:
                        pos_hint: {"right": .95,"center_y": .5}
                        text: "أذكار الصباح"  
                        theme_text_color: "Custom"
                        theme_font_name: "Custom"
                        theme_font_size: "Custom"
                        font_name:"BBCairo"
                        font_script_name: "Arab"
                        font_direction: "rtl"
                        text_color : "#f4f9fc"
                        font_size : dp(16)
